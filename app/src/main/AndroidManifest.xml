<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" android:label="@string/app_name" />
        <activity android:name=".RegisterActivity" android:label="Register" />
        <activity android:name=".SubmitOrder" android:label="订单" />
        <activity android:name=".CartActivity" android:label="购物车" />
        <activity android:name=".ModifyCart" android:label="修改" />
        <activity android:name=".ProductDetail" android:label="菜品详细信息" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>